---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import img05 from "../assets/img-05.jpg";
import { Image } from "astro:assets";
---

<Layout title="MTNT">
  <div class="wrapper">
    <Navbar />
    <header class="about_header flex-center column">
      <Image class="img-about-header" src={img05} alt="534543'-4#" />
      <div class="header_about-container">
        <h2>More than 10 years of experience in trekking.</h2>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Ut similique
          temporibus distinctio dolor aperiam
        </p>
      </div>
    </header>
    <Footer />
  </div>
</Layout>

<style>
  .about_header {
    position: relative;
    width: 95%;
    height: 100svh;
    margin: 0 auto;
  }

  .img-about-header {
    margin-top: 15rem;
    object-fit: cover;
    width: 95%;
    max-width: 120rem;
    height: 80rem;
    border-radius: 0.6rem;
  }

  .header_about-container {
    padding: 2rem;
    background-color: var(--black);
    border: 2px dotted var(--orange);
    border-radius: 0.6rem;
    max-width: 70rem;
    width: 100%;
    position: absolute;
    top: 14rem;
    
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
  }

  .header_about-container h2 {
    font-size: 3rem;
    color: var(--orange);
    font-weight: 900;
  }

  .header_about-container p {
    color: var(--white);
    line-height: 4rem;
  }

  @media (min-width: 900px) {
    .about_header {
      margin: 0 auto;
      width: 95%;
      align-items: end;
    }

    .img-about-header {
      width: 90%;
    }

    .header_about-container{
        left: 19%;
    }

    

    .header_about-container h2 {
      font-size: 6rem;
    }
  }
</style>
